<%- include('./partials/header.ejs'); %>
<%- include('./partials/navbar.ejs'); %>
<div class="container">
   <div id="linhaTituloBlog" class="row">
      <div class="col-sm-12">
         <h3>Bem vindos ao nosso blog!</h3>
      </div>
   </div>
   <div class="row">
      <div class="col-sm-9">
         <div class="card">
            <div class="card-header">
               <h5>Aqui é o nosso espaço para conversarmos e nos conhecermos.</h5>
            </div>
            <div class="card-body">
               <form method="POST" action="/salvarBlog">
                  <label>Meu nome é </label>
                  <input type="text" name="nome" class="form-control" placeholder="Informe seu nome por favor.">
                  <br>
                  <label>Título ou assunto</label>
                  <input type="text" name="titulo" class="form-control" placeholder="Título da pergunta.">
                  <br>
                  <label>Mensagem</label>
                  <textarea name="mensagem" class="form-control" placeholder="Descreva sua pergunta aqui"></textarea>
                  <br>
                  <button class="btn btn-primary">Perguntar</button>
               </form>
            </div>
         </div>
      </div>
      <div id="colunaCategorias" class="col-sm-3">
         <button class="btn-noline-dark"> Perguntas</button>
         <br>
         <button class="btn-noline-dark"> Notícias</button>
         <br>
         <button class="btn-noline-dark"> Vídoes</button>
      </div>
   </div>
   <br>
   <div class="row">
      <div class="col-sm-12">
         <h3>Suas perguntas estam respondidas abaixo: </h3>
      </div>
   </div>
   <div class="row">
      <div class="col-sm-12">
         <% perguntas.forEach(pergunta => { %>
            <div class="card">
               <div class="card-body">
                 <h5 class="card-title">Pergunta de <%= pergunta.nome %>: </h5>
                 <h6 class="card-subtitle mb-3 text-muted"><%= pergunta.titulo %></h6>
                 <br>
                 <a href="/blog/<%= pergunta.id %>"><button class="btn btn-primary btn-lg">Detalhes</button></a>
               </div>
             </div>
         <% }) %>
      </div>
   </div>
</div>
<%- include('./partials/scripts.ejs'); %>